{
  "extends": ["next/core-web-vitals", "next/typescript", "prettier"],

  "plugins": ["prettier"],

  "rules": {
    "prettier/prettier": "error",

    "@typescript-eslint/no-unused-vars": [
      "error",
      {
        "argsIgnorePattern": "^_",
        "varsIgnorePattern": "^_"
      }
    ],
    "no-unused-vars": "off",
    "no-console": "warn",
    "no-debugger": "error",
    "prefer-const": "error",
    "no-var": "error"
  }
}
